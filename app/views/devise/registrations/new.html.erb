<!--Sign Up Page-->



		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
		  <%= f.error_notification %>

		  <%= f.input :name, label: 'First Name', placeholder: "First Name"%>
		  <%= f.input :lastname, label: 'Last Name', placeholder: "Last Name" %>
		  <%= f.input :email, placeholder: "user@example.com" %>
		  <%= f.input :password, placeholder: "Password" %>
		  <%= f.input :password_confirmation, label: 'Confirm Password', placeholder: "Confirm Password" %>

		  <%= f.submit "Sign Up", class: "btn btn-large btn-block btn-success" %>
		  <br>
		  <button href="new_user_session_path" type="submit" class="btn btn-warning btn-large btn-block">NO,  Plug Me In!</button>
		  
		<% end %>
