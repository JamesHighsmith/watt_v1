<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :idea %>
    <%= f.input :address %>
    <%= f.input :zipcode %>
    <%= f.input :problem %>
    <%= f.input :solution %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
