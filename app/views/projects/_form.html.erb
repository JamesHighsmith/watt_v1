<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :idea, label: 'Clean Energy Project Idea Discription' %>
    <%= f.input :address, label: 'Project Location Address' %>
    <%= f.input :zipcode, label: 'Zip Code Where The Project Is Located' %>
    <%= f.input :problem, label: 'What Is The Problem You Are Trying To Solve?' %>
    <%= f.input :solution, label: 'What Is Your Suggested Solution To The Problem?' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
