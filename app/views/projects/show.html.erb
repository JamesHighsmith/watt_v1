  <!--Show Project-->

  <table>

    <p>
      <b>Creator:</b>
      <%= @project.user.name %>&nbsp&nbsp<%= @project.user.lastname.first.capitalize %>.
    </p>

    <p>
      <b>Idea:</b>
      <%= @project.idea %>
    </p>

    <p>
      <b>Address:</b>
      <%= @project.address %>
    </p>

    <p>
      <b>Zipcode:</b>
      <%= @project.zipcode %>
    </p>

    <p>
      <b>Problem:</b>
      <%= @project.problem %>
    </p>

    <p>
      <b>Solution:</b>
      <%= @project.solution %>
    </p>

    <p>
      <b>Created:</b>
      <%= time_ago_in_words(@project.created_at) %> ago.
    </p>
  </table>
<% if current_user == @project.user %>
<%= link_to 'Edit', edit_project_path(@project) %>
<% end %>
<%= link_to 'Back', projects_path %>


